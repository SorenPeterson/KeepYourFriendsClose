<div class="row">

  <% @invitations.each do |invitation| %>
    <div class="col span_12">
        <span id="invite-to"><%= link_to invitation.group.name, url_for(invitation.group) %></span></br>
        <span id="invited-by"> Invited by: <img src="<%= invitation.group.admin.facebook.get_picture(invitation.group.admin.uid) %>"> <%= invitation.group.admin.name %></span></br>
        <div class="accept-decline-buttons">
          <%= button_to "Accept", group_invitation_path(invitation.group, invitation) + '/accept', method: :delete %>
          <%= button_to "Decline", group_invitation_path(invitation.group, invitation) + '/decline', method: :delete %>
        </div>
    </div>
  <% end %>

</div>
