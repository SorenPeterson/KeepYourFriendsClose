$("#help-button").on("click", function(event){
  event.preventDefault();
  $.ajax({
    url: "/groups/1/text",
    type: "post"
  }).done(function(response){
    console.log("success");
    $("#help-button").replaceWith("Message Sent! Your friends are on the way");
  }).fail(function(){
    alert("you failed");
  })
})