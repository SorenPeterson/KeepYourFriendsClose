<!DOCTYPE html>
<html>
<head>
  <title>KeepYourFriendsClose</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application'  %>
  <%= csrf_meta_tags %>

  <!-- api key possibly needs to be relocated -->
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCvbVDTuIX7MrUCHeZkkCEU44EDdFiFKKw"></script>
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
  <link href='http://fonts.googleapis.com/css?family=Pontano+Sans' rel='stylesheet' type='text/css'>

  <script src="http://widget.cloudinary.com/global/all.js" type="text/javascript"></script>

</head>
<body>

  <% if current_user %>
    <div class="band header">
      <div class="row">
        <div class="one columns">
          <button><%= link_to "<-" , groups_path %></button>
        </div>

        <div class="ten columns">
          <div class="logo">
            keep &nbsp your &nbsp friends &nbsp close
          </div>
        </div>

        <div class="one columns">
          Signed in as <strong><%= current_user.name %></strong>!
          <%= link_to "Sign out", signout_path, id: "sign_out" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
